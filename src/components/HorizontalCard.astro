---
const { title, subtitle, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="rounded-lg bg-blue-700 hover:shadow-xl transition ease-in-out hover:scale-[102%] text-grey-50"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}<span class="text-base text-grey-100">&nbsp;&nbsp;{subtitle}</span>
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="pt-3 pb-1 text-1xl text-right text-base-100">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
