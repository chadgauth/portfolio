---
import Icon from "../Icon.astro";
import ProfileImage from "../../components/ProfileImage.astro";
import type { ImageMetadata } from "astro";

interface Props {
  profileImage: ImageMetadata;
  class?: string;
}

const { profileImage, class: className } = Astro.props;
---

<div class:list={["flex flex-col items-center", className]}>
  <div class="sticky top-20 flex flex-col items-center w-full">
    <!-- RGB Status Indicator -->
    <div class="w-full flex justify-center mb-4">
      <!-- <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-cyber-darker/50 border border-cyber-primary/20 backdrop-blur-sm">
        <div class="flex space-x-1">
          <span class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></span>
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse" style="animation-delay: 0.2s"></span>
          <span class="w-2 h-2 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 0.4s"></span>
        </div>
        <span class="text-xs font-mono text-cyber-text-secondary uppercase tracking-wider">Online</span>
      </div> -->
    </div>

    <!-- Profile Image with Softer Design -->
    <div class="relative w-full max-w-[280px] aspect-square mb-6">
      <!-- Subtle Glow Effects -->
      <div class="absolute inset-0 bg-gradient-to-tr from-cyber-primary/10 to-blue-500/10 rounded-3xl blur-xl opacity-40"></div>
      
      <!-- Profile Image -->
      <ProfileImage
        profileImage={profileImage}
        altText="Chad Gauthier - Engineering Leader"
        class="relative z-10 w-full h-full rounded-lg border border-gray-600/30 bg-gray-800/20 transition-all duration-300 hover:scale-[1.02] hover:border-cyber-primary/40"
      />
    </div>

    <!-- Status Section -->
    <!-- <div class="w-full max-w-[280px] mb-6 text-center space-y-3">
      <div class="inline-flex items-center px-3 py-1.5 rounded-full bg-gradient-to-r from-cyan-500/10 to-blue-500/10 border border-cyan-500/20">
        <span class="text-sm font-medium text-cyan-400">Engineering Leader</span>
      </div>
      
      <div class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-green-500/10 border border-green-500/20">
        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
        <span class="text-xs text-green-400 font-medium">Available for Roles</span>
      </div>
    </div> -->

    <!-- Enhanced Social Links -->
    <div class="w-full max-w-[300px] space-y-4">
      <div class="text-center">
        <h4 class="text-sm font-mono font-medium text-cyber-text-primary flex items-center justify-center">
          <span class="w-1 h-4 bg-gradient-to-b from-red-400 via-green-400 to-blue-400 mr-2 rounded-full"></span>
          Connect
        </h4>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <a
          href="https://www.linkedin.com/in/chadgauth/"
          target="_blank"
          class="social-button"
          aria-label="LinkedIn Profile"
        >
          <Icon name="linkedin" class="h-3 w-3" />
          <span class="text-xs">LinkedIn</span>
        </a>

        <a
          href="https://github.com/chadgauth"
          target="_blank"
          class="social-button"
          aria-label="GitHub Profile"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
          </svg>
          <span class="text-xs">GitHub</span>
        </a>

        <a
          href="/chad-gauthier.vcf"
          download
          class="contact-button col-span-2"
          aria-label="Download Contact Information"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <line x1="19" y1="8" x2="19" y2="14"/>
            <line x1="22" y1="11" x2="16" y2="11"/>
          </svg>
          <span class="text-xs">Add Contact</span>
        </a>

        <a
          href="/blog"
          class="blog-button col-span-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14,2 14,8 20,8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
            <polyline points="10,9 9,9 8,9"/>
          </svg>
          <span class="text-xs">Blog</span>
        </a>
      </div>
    </div>

    <!-- RGB Background Effects -->
    <div class="absolute -top-10 -left-10 w-20 h-20 bg-red-500/10 rounded-full blur-xl pointer-events-none"></div>
    <div class="absolute top-1/3 -right-8 w-16 h-16 bg-green-500/10 rounded-full blur-xl pointer-events-none"></div>
    <div class="absolute -bottom-8 left-1/2 w-18 h-18 bg-blue-500/10 rounded-full blur-xl pointer-events-none"></div>
  </div>
</div>

<style>
  .cyber-card {
    @apply relative overflow-hidden rounded-lg border border-cyber-primary/20 bg-cyber-darker/30 backdrop-blur-sm;
  }

  .social-button {
    @apply flex flex-col items-center justify-center gap-1 p-3 rounded-lg
           bg-gray-800/30 border border-gray-600/20 text-gray-300
           transition-all duration-200 hover:border-gray-500/40 hover:bg-gray-700/30
           focus:outline-none focus:ring-2 focus:ring-cyan-500/50;
  }

  .contact-button {
    @apply flex items-center justify-center gap-2 px-4 py-3 rounded-lg
           bg-gray-800/30 border border-gray-600/20 text-gray-300
           transition-all duration-200 hover:border-gray-500/40 hover:bg-gray-700/30
           focus:outline-none focus:ring-2 focus:ring-cyan-500/50;
  }

  .blog-button {
    @apply flex items-center justify-center gap-2 px-4 py-3 rounded-lg
           bg-gray-800/20 border border-gray-600/20 text-gray-400
           transition-all duration-200 hover:border-gray-500/30 hover:bg-gray-700/20 hover:text-gray-300
           focus:outline-none focus:ring-2 focus:ring-cyan-500/50;
  }

  @media (max-width: 768px) {
    .sticky {
      position: relative;
      top: 0;
    }
  }
</style>
