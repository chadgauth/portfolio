---
import Icon from "../Icon.astro";
import ProfileImage from "../../components/ProfileImage.astro";
import type { ImageMetadata } from "astro";

interface Props {
  profileImage: ImageMetadata;
  class?: string;
}

const { profileImage, class: className } = Astro.props;
---

<div class:list={["flex flex-col items-center", className]}>
  <div class="sticky top-20 flex flex-col items-center w-full">
    <!-- Profile Image -->
    <div class="relative w-full max-w-[300px] aspect-square">
      <div class="absolute inset-0 bg-cyber-gradient-hover rounded-full blur-2xl opacity-20"></div>
      <ProfileImage
        profileImage={profileImage}
        altText="closeup of Chad Gauthier in a Japanese park"
        class="relative z-10 w-full h-full rounded-full border-2 border-cyber-primary/20 transition-transform duration-300 hover:scale-[1.02]"
      />
      <div class="absolute inset-0 rounded-full border border-cyber-primary/30 bg-cyber-gradient opacity-10"></div>
    </div>

    <!-- Social Links -->
    <div class="mt-8 w-full max-w-[300px] space-y-4">
      <div class="text-center">
        <h4 class="text-sm font-mono font-medium text-cyber-text-primary cyber-text-glow">Connect</h4>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <a
          href="https://www.linkedin.com/in/chadgauth/"
          target="_blank"
          class="cyber-button"
          aria-label="LinkedIn Profile"
        >
          <Icon name="linkedin" class="h-5 w-5" />
        </a>

        <a
          href="https://github.com/chadgauth"
          target="_blank"
          class="cyber-button"
          aria-label="GitHub Profile"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-5 w-5">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
          </svg>
        </a>

        <a
          href="/chad-gauthier.vcf"
          download
          class="cyber-button col-span-2"
          aria-label="Download Contact Information"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-5 w-5 mr-2">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <line x1="19" y1="8" x2="19" y2="14"/>
            <line x1="22" y1="11" x2="16" y2="11"/>
          </svg>
          Add Contact
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .cyber-button {
    @apply flex items-center justify-center px-4 py-2 rounded-md
           bg-cyber-darker border border-cyber-primary/20
           text-cyber-text-primary text-sm font-medium
           transition-all duration-200 hover:border-cyber-primary/40
           hover:text-cyber-primary hover:shadow-[0_0_15px_rgba(0,255,65,0.1)]
           focus:outline-none focus:ring-2 focus:ring-cyber-primary/50;
  }

  @media (max-width: 768px) {
    .sticky {
      position: relative;
      top: 0;
    }
  }
</style>
