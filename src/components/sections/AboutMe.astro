---
interface Props {
  className?: string;
}

const { className } = Astro.props;

// About Me content configuration
const aboutContent = {
  title: "About Me",
  description: "When I'm not architecting systems or mentoring teams, I'm exploring the intersection of technology and creativity. From the latest sci-fi films to cutting-edge hardware, I'm passionate about how innovation shapes our world.",
  interests: [
    {
      title: "Cinema Tech",
      color: "red",
      description: "Fascinated by cinematography, VFX, and how technology transforms storytelling. Always excited about the latest camera tech and post-production innovations."
    },
    {
      title: "AI & Self-Hosting",
      color: "green",
      description: "Running AI image generation models locally, self-hosting essential apps with Docker, managing HomePod and local DNS servers. Passionate about on-device AI and maintaining full control over my tech stack."
    },
    {
      title: "Active & Social",
      color: "blue",
      description: "Roller skating, rock climbing, and dancing keep me energized. I believe the best code comes from a balanced life and diverse experiences."
    }
  ],
  philosophy: {
    title: "Design Philosophy",
    description: "Great engineering is like great filmmakingâ€”it's about crafting experiences that feel effortless but are built on solid technical foundations. Whether it's a perfectly timed cut or a sub-millisecond API response, the magic is in the details."
  }
};

const colorClasses = {
  red: "bg-red-400",
  green: "bg-green-400", 
  blue: "bg-blue-400",
  cyan: "bg-cyan-400"
};
---

<section class:list={["relative", className]}>
  <!-- Section Title -->
  <div class="relative inline-block mb-6">
    <h2 class="text-xl font-bold text-gray-200">
      {aboutContent.title}
    </h2>
    <div class="absolute -bottom-1 left-0 right-0 h-px bg-gradient-to-r from-transparent via-cyan-400/60 to-transparent"></div>
  </div>

  <!-- Main Content -->
  <div class="space-y-6">
    <p class="text-gray-300 leading-relaxed text-lg">
      {aboutContent.description.split('technology and creativity').map((part, index) => 
        index === 0 ? part : 
        <>
          <span class="text-cyan-400">technology and creativity</span>
          {part}
        </>
      )}
    </p>

    <!-- Interests Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {aboutContent.interests.map((interest) => (
        <div class="bg-gray-800/30 border border-gray-600/20 rounded-xl p-4 hover:border-gray-500/30 transition-colors duration-200">
          <div class="space-y-3">
            <div class="flex items-center space-x-2">
              <div class:list={["w-2 h-2 rounded-full", colorClasses[interest.color]]}></div>
              <h4 class:list={["font-semibold", `text-${interest.color}-400`]}>{interest.title}</h4>
            </div>
            <p class="text-gray-300 text-sm leading-relaxed">
              {interest.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Philosophy -->
    <div class="bg-gray-800/40 border border-gray-600/30 rounded-xl p-4">
      <h4 class="font-semibold text-cyan-400 mb-3 flex items-center">
        <span class="w-1 h-4 bg-cyan-400 mr-3 rounded-full"></span>
        {aboutContent.philosophy.title}
      </h4>
      <p class="text-gray-300 leading-relaxed">
        {aboutContent.philosophy.description}
      </p>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute -top-10 -right-10 w-[200px] h-[200px] bg-cyan-500/5 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute -bottom-10 -left-10 w-[200px] h-[200px] bg-blue-500/5 rounded-full blur-3xl pointer-events-none"></div>
</section>
