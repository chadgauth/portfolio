---
import TypeWriter from "../TypeWriter.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section class:list={["relative", className]}>
  <!-- Title -->
  <div class="relative inline-block">
    <h1 class="text-4xl md:text-5xl font-mono font-bold bg-gradient-to-r from-cyber-primary to-cyber-accent bg-clip-text text-transparent">
      Chad Gauthier
    </h1>
    <div class="absolute -inset-x-4 -inset-y-2 border border-cyber-primary/20 bg-cyber-primary/5 blur-lg"></div>
  </div>

  <!-- TypeWriter -->
  <div class="relative mt-8 max-w-2xl">
    <TypeWriter className="text-lg md:text-xl text-cyber-text-secondary font-mono">
      <p>Full-stack software engineering is my passion and expertise</p>
      <p>Building scalable systems and elegant solutions</p>
      <p>Transforming complex challenges into efficient code</p>
      <p>Crafting intuitive user experiences with modern tech</p>
      <p>Pushing boundaries in software architecture</p>
    </TypeWriter>
  </div>

  <!-- Links -->
  <div class="flex gap-4 mt-8">
    <a 
      href="/cv" 
      class="cyber-button"
    >
      View CV
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14" />
        <path d="m12 5 7 7-7 7" />
      </svg>
    </a>

    <a 
      href="https://github.com/chadgauth" 
      target="_blank" 
      rel="noopener noreferrer"
      class="cyber-button"
    >
      GitHub
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
      </svg>
    </a>
  </div>

  <!-- Subtle background effect -->
  <div class="absolute -top-20 -right-20 w-[200px] h-[200px] bg-cyber-primary/5 rounded-full blur-3xl pointer-events-none"></div>
</section>

<style>
  .cyber-button {
    @apply inline-flex items-center justify-center px-4 py-2 rounded-md
           bg-cyber-darker border border-cyber-primary/20
           text-cyber-text-primary text-sm font-medium
           transition-all duration-200 hover:border-cyber-primary/40
           hover:text-cyber-primary hover:shadow-[0_0_15px_rgba(0,255,65,0.1)]
           focus:outline-none focus:ring-2 focus:ring-cyber-primary/50;
  }
</style>
