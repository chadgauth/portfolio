---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

// Hero content configuration
const heroContent = {
  name: "Chad Gauthier",
  title: "Engineering Leader",
  subtitle: "10+ Years Delivering Measurable Business Impact",
  description: "Engineering leader with extensive experience in enterprise, finance, and high-growth startup environments. Known for delivering measurable business impact by owning projects end-to-end—from discovery through deployment—and mentoring teams to higher autonomy.",
  achievements: [
    "Cut build times by 80%+ through distributed system architecture",
    "Improved database performance 10x with strategic optimization",
    "Led AI/ML system integration and GraphQL API modernization",
    "Mentored teams across enterprise, finance, and startup environments"
  ],
  links: [
    {
      label: "View Experience",
      href: "/cv",
      primary: true,
      icon: "arrow-right"
    },
    {
      label: "GitHub",
      href: "https://github.com/chadgauth",
      primary: false,
      external: true,
      icon: "github"
    }
  ]
};
---

<section class:list={["relative py-8 md:py-12", className]}>
  <div class="max-w-4xl">
    <!-- Name and Title -->
    <div class="relative mb-6">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-gray-100 to-cyan-400 bg-clip-text text-transparent leading-tight">
        {heroContent.name}
      </h1>
    </div>

    <!-- Engineering Leader Badge -->
    <div class="inline-flex items-center px-4 py-2 mb-6 rounded-lg bg-gray-800/40 border border-gray-600/30 backdrop-blur-sm">
      <div class="w-2 h-2 bg-cyan-400 rounded-full mr-3"></div>
      <span class="text-cyan-400 font-mono font-medium text-sm tracking-wide">
        {heroContent.title} • {heroContent.subtitle}
      </span>
    </div>

    <!-- Description -->
    <div class="max-w-3xl mb-8">
      <p class="text-lg md:text-xl text-gray-300 leading-relaxed">
        {heroContent.description}
      </p>
    </div>

    <!-- Key Achievements -->
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-gray-200 mb-4 flex items-center">
        <div class="w-1 h-4 bg-cyan-400 mr-3 rounded-full"></div>
        Key Achievements
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        {heroContent.achievements.map((achievement) => (
          <div class="flex items-start space-x-3 p-3 rounded-lg bg-gray-800/30 border border-gray-600/20 hover:border-gray-600/40 transition-colors duration-200">
            <div class="w-1.5 h-1.5 bg-cyan-400/60 rounded-full mt-2 flex-shrink-0"></div>
            <span class="text-gray-300 leading-relaxed text-sm">{achievement}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Action Links -->
    <div class="flex flex-wrap gap-3">
      {heroContent.links.map(link => (
        <a
          href={link.href}
          target={link.external ? "_blank" : undefined}
          rel={link.external ? "noopener noreferrer" : undefined}
          class:list={[
            "inline-flex items-center px-6 py-3 rounded-lg font-medium transition-all duration-200",
            link.primary
              ? "bg-cyan-600/20 border border-cyan-500/30 text-cyan-400 hover:bg-cyan-600/30 hover:border-cyan-500/50"
              : "bg-gray-800/40 border border-gray-600/30 text-gray-300 hover:border-gray-500/50"
          ]}
        >
          <span>{link.label}</span>
          
          {link.icon === "arrow-right" && (
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14" />
              <path d="m12 5 7 7-7 7" />
            </svg>
          )}
          
          {link.icon === "github" && (
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
            </svg>
          )}
        </a>
      ))}
    </div>
  </div>
</section>

</style>
