---
const today = new Date();
---

<footer class="border-t border-cyber-primary/10 bg-cyber-darker/80 backdrop-blur-sm py-6 mt-auto">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="text-cyber-text-secondary text-sm">
        &copy; {today.getFullYear()} Chad Gauthier. All rights reserved.
      </div>
      
      <nav class="flex items-center space-x-4">
        <a 
          href="/cv" 
          class="text-cyber-text-secondary hover:text-cyber-primary transition-colors duration-200"
        >
          CV
        </a>
        <a 
          href="/blog" 
          class="text-cyber-text-secondary hover:text-cyber-primary transition-colors duration-200"
        >
          Blog
        </a>
        <a 
          href="https://github.com/chadgauth" 
          target="_blank"
          rel="noopener noreferrer" 
          class="text-cyber-text-secondary hover:text-cyber-primary transition-colors duration-200"
        >
          GitHub
        </a>
      </nav>
    </div>
  </div>
</footer>
