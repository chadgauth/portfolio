---
const { title } = Astro.props;
---

<header
  class="sticky top-0 z-40 w-full border-b border-gray-600/20 bg-gray-900/80 backdrop-blur-sm transition-all duration-300"
>
  <div class="container mx-auto flex h-16 items-center justify-between px-4">
    <a href="/" class="flex items-center space-x-2">
      <!-- <span class="font-mono text-xl font-bold text-gray-100">
        {title}
      </span> -->
    </a>

    <nav class="flex items-center space-x-4">
      <!-- Navigation items removed for cleaner header -->
    </nav>
  </div>
</header>

<style>
  .header-button {
    @apply inline-flex items-center justify-center px-4 py-2 rounded-md
           bg-gray-800/40 border border-gray-600/30 text-gray-300
           text-sm font-medium transition-all duration-200
           hover:border-gray-500/50 hover:bg-gray-700/40
           focus:outline-none focus:ring-2 focus:ring-cyan-500/50;
  }
</style>
