---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import { cvData } from "../data/cv";
import { buttonVariants } from "@/components/ui/button";
---

<BaseLayout title="Resume" sideBarActiveItemID="cv">
  <div class="flex items-center justify-between mb-8">
    <a
      href="/"
      class={buttonVariants({ variant: "outline" })}
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 h-4 w-4">
        <path d="m12 19-7-7 7-7"/>
        <path d="M19 12H5"/>
      </svg>
      Back to Home
    </a>
  </div>

  <div class="mb-8">
    <div class="text-3xl w-full font-bold">Profile</div>
  </div>

  <div class="mb-10 text-justify">
    Senior full-stack engineer and technical leader with proven expertise in architecting scalable solutions and driving technical innovation. Demonstrated success in designing and implementing modern architectures, from GraphQL APIs to AI-integrated systems, while leading teams and mentoring developers. Seeking opportunities to leverage architectural expertise in solving complex technical challenges and driving product evolution through thoughtful system design and technical leadership.
  </div>

  <div class="mb-8">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>
  
  <div class="time-line-container grid gap-6 mb-12">
    <TimeLineElement
      item={{
        id: "education-1",
        title: "B.S. INFORMATION SYSTEMS",
        company: "Gannon University",
        location: "Erie, PA",
        startDate: "2008",
        endDate: "2013",
        impact: 7,
        skills: {
          architecture: [],
          technical: ["Computer Science", "Information Systems"],
          development: ["Programming Fundamentals"],
          leadership: ["Academic Excellence"]
        },
        highlights: [{
          text: "Double major in Information Systems and Theater/Communication Arts",
          relatedSkills: ["Information Systems"]
        }]
      }}
    />
  </div>

  <div class="mb-8">
    <div class="text-3xl w-full font-bold">Work Experience</div>
  </div>
  
  <div class="time-line-container mb-12 space-y-8">
    {cvData.map(item => (
      <TimeLineElement item={item} />
    ))}
  </div>
</BaseLayout>
